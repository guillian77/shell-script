# GTA V SERVER
iptables -t filter -A INPUT -p udp --dport 30120 -j ACCEPT
iptables -t filter -A OUTPUT -p udp --dport 30120 -j ACCEPT

iptables -t filter -A INPUT -p udp --dport 30120 -j ACCEPT
iptables -t filter -A OUTPUT -p udp --dport 30120 -j ACCEPT

iptables -t filter -A INPUT -p udp --dport 30110 -j ACCEPT
iptables -t filter -A OUTPUT -p udp --dport 30110 -j ACCEPT

iptables -t filter -A INPUT -p udp --dport 30110 -j ACCEPT
iptables -t filter -A OUTPUT -p udp --dport 30110 -j ACCEPT

# SSH
iptables -t filter -A INPUT -p tcp --dport 8085 -j ACCEPT
iptables -t filter -A OUTPUT -p tcp --dport 8085 -j ACCEPT

# IP Autorisers
iptables -A INPUT -s 85.190.70.49 -j ACCEPT #Shadow Weedy
iptables -A OUTPUT -d 85.190.70.49 -j ACCEPT #Shadow Weedy

